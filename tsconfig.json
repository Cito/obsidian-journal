{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "importsNotUsedAsValues": "remove",
    "lib": ["dom", "es5", "scripthost", "es2015", "es2021"]
  },
  "include": ["**/*.ts"]
}
